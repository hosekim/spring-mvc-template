<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <!--
               Pattern Layout:
               %c   category of logging event.  E.g., class name
               %d   date of logging event
               %m   application supplied message
               %n   platform specific line separator
               %t   thread name
            -->
            <param name="ConversionPattern" value="%d{HH:mm:ss} [%p] - [thread: %t] - %c{1}: %m%n" />
        </layout>
    </appender>

    <!-- Log4J Levels: TRACE, DEBUG, INFO, WARN, ERROR -->

    <!-- Specific logger settings -->
    <logger name="com.orangemako.spring.controller.mvc">
        <level value="trace" />
    </logger>

    <!-- Settings for all other loggers -->
    <root>
        <priority value="info" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>